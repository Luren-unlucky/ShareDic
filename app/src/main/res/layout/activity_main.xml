<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    
    <androidx.appcompat.widget.Toolbar
        android:background="?attr/colorPrimary"
        android:id="@+id/main_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/app_name"
        app:titleTextColor="@color/primaryTextColor"/>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/main_banner"
        android:layout_height="160dp"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@+id/main_toolbar"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">
        
        <ImageView
            android:id="@+id/main_banner_image"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/main_banner"/>
        
    </androidx.cardview.widget.CardView>
    
    <GridLayout
        android:columnCount="2"
        android:id="@+id/main_function"
        android:layout_height="120dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/main_banner">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/main_function_dic_download"
            android:layout_columnWeight="1"
            android:layout_height="52dp"
            android:layout_marginEnd="8dp"
            android:layout_width="0dp"
            app:cardBackgroundColor="@color/secondaryLightColor"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            
            <TextView
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_dic_download"
                android:gravity="center"
                android:id="@+id/main_function_dic_download_tv"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/dic_download"
                android:textColor="@color/secondaryTextColor"/>
            
        
        </androidx.cardview.widget.CardView>
        
        <androidx.cardview.widget.CardView
            android:id="@+id/main_function_bot_download"
            android:layout_columnWeight="1"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            app:cardBackgroundColor="@color/secondaryLightColor"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            
            <TextView
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_bot_download"
                android:gravity="center"
                android:id="@+id/main_function_bot_download_tv"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/bot_download"
                android:textColor="@color/secondaryTextColor"/>
            
        
        </androidx.cardview.widget.CardView>
        
        <androidx.cardview.widget.CardView
            android:id="@+id/main_function_feelback"
            android:layout_columnWeight="1"
            android:layout_height="52dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp"
            android:layout_width="0dp"
            app:cardBackgroundColor="@color/secondaryLightColor"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            
            <TextView
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_feelback"
                android:gravity="center"
                android:id="@+id/main_function_feelback_tv"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/app_feelback"
                android:textColor="@color/secondaryTextColor"/>
            
        
        </androidx.cardview.widget.CardView>
        
        <androidx.cardview.widget.CardView
            android:id="@+id/main_function_upgrade"
            android:layout_columnWeight="1"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_width="0dp"
            app:cardBackgroundColor="@color/secondaryLightColor"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            
            <TextView
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_upgrade"
                android:gravity="center"
                android:id="@+id/main_function_upgrade_tv"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/app_upgrade"
                android:textColor="@color/secondaryTextColor"/>
            
        
        </androidx.cardview.widget.CardView>
        
    
    </GridLayout>
    

</androidx.constraintlayout.widget.ConstraintLayout>